{
  "name": "xpra-html5-client-react",
  "version": "0.5.0",
  "author": "Anders Evenrud <andersevenrud@gmail.com>",
  "license": "Apache-2.0",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "lint": "eslint 'src/**/*.{ts,tsx}'",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@types/lodash-es": "^4.17.6",
    "@types/react": "18",
    "@types/react-dom": "18",
    "@types/react-transition-group": "^4.4.4",
    "@typescript-eslint/eslint-plugin": "^5.12.1",
    "@typescript-eslint/parser": "^5.12.1",
    "autoprefixer": "^10.4.4",
    "eslint": "^8.9.0",
    "eslint-config-prettier": "^8.4.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.28.0",
    "eslint-plugin-tailwindcss": "^3.5.0",
    "prettier": "^2.5.1",
    "prettier-plugin-tailwindcss": "^0.1.8",
    "tailwindcss": "^3.0.23",
    "typescript": "^4.5.4",
    "vite": "^2.8.0"
  },
  "dependencies": {
    "@fontsource/inter": "^4.5.7",
    "@fortawesome/fontawesome-svg-core": "^6.1.1",
    "@fortawesome/free-solid-svg-icons": "^6.1.1",
    "@fortawesome/react-fontawesome": "^0.1.18",
    "lodash-es": "^4.17.21",
    "react": "18",
    "react-dom": "18",
    "react-transition-group": "^4.4.2",
    "xpra-html5-client": "^2.0.0"
  },
  "eslintConfig": {
    "parserOptions": {
      "parser": "@typescript-eslint/parser"
    },
    "extends": [
      "plugin:@typescript-eslint/recommended",
      "plugin:prettier/recommended",
      "plugin:react/recommended",
      "plugin:tailwindcss/recommended"
    ],
    "rules": {
      "prefer-const": "warn",
      "semi": [
        "error",
        "never"
      ],
      "quotes": [
        "error",
        "single",
        {
          "avoidEscape": true
        }
      ],
      "@typescript-eslint/no-empty-function": "warn",
      "@typescript-eslint/semi": "off",
      "@typescript-eslint/no-unused-vars": "off",
      "no-unused-vars": "off"
    },
    "settings": {
      "tailwindcss": {
        "officialSorting": true
      }
    }
  },
  "prettier": {
    "plugins": [
      "prettier-plugin-tailwindcss"
    ],
    "semi": false,
    "singleQuote": true
  },
  "keywords": [
    "xpra"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/andersevenrud/xpra-html5-client.git"
  },
  "bugs": {
    "url": "https://github.com/andersevenrud/xpra-html5-client/issues"
  },
  "homepage": "https://github.com/andersevenrud/xpra-html5-client"
}
