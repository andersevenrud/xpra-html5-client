{
  "name": "xpra-html5-client",
  "version": "2.0.0",
  "author": "Anders Evenrud <andersevenrud@gmail.com>",
  "license": "Apache-2.0",
  "main": "dist/xpra.es.js",
  "module": "dist/xpra.es.js",
  "types": "dist/src/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/xpra.es.js",
      "require": "./dist/xpra.umd.js"
    }
  },
  "files": [
    "dist/",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc --noEmit && vite build",
    "lint": "eslint 'src/**/*.{ts,tsx}'",
    "test": "jest --passWithNoTests",
    "typecheck": "tsc --noEmit",
    "docs": "typedoc --tsconfig tsconfig.docs.json src/index.ts"
  },
  "devDependencies": {
    "@types/brotli": "^1.3.1",
    "@types/events": "^3.0.0",
    "@types/jest": "^27.4.1",
    "@types/lodash-es": "^4.17.6",
    "@types/node": "^17.0.21",
    "@types/node-forge": "^1.0.1",
    "@types/pako": "^1.0.3",
    "@typescript-eslint/eslint-plugin": "^5.12.1",
    "@typescript-eslint/parser": "^5.12.1",
    "eslint": "^8.9.0",
    "eslint-config-prettier": "^8.4.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-tailwindcss": "^3.5.0",
    "jest": "^27.5.1",
    "jest-websocket-mock": "^2.3.0",
    "prettier": "^2.5.1",
    "rollup-plugin-visualizer": "^5.6.0",
    "ts-jest": "^27.1.4",
    "typedoc": "^0.22.13",
    "typedoc-plugin-no-inherit": "^1.3.1",
    "typescript": "^4.5.4",
    "vite": "^2.8.0",
    "vite-plugin-dts": "^0"
  },
  "dependencies": {
    "brotli": "^1.3.2",
    "events": "^3.3.0",
    "lodash-es": "^4.17.21",
    "lz4js": "^0.2.0",
    "node-forge": "^1.2.1",
    "pako": "^2.0.4",
    "typed-emitter": "^2.1.0",
    "xpra-av": "^1.0.0",
    "xpra-broadway": "^1.0.0",
    "xpra-jsmpeg": "^1.0.0"
  },
  "eslintConfig": {
    "parserOptions": {
      "parser": "@typescript-eslint/parser"
    },
    "extends": [
      "plugin:@typescript-eslint/recommended",
      "plugin:prettier/recommended"
    ],
    "rules": {
      "prefer-const": "warn",
      "semi": [
        "error",
        "never"
      ],
      "quotes": [
        "error",
        "single",
        {
          "avoidEscape": true
        }
      ],
      "@typescript-eslint/no-empty-function": "warn",
      "@typescript-eslint/semi": "off",
      "@typescript-eslint/no-unused-vars": "off",
      "no-unused-vars": "off"
    }
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  },
  "jest": {
    "coveragePathIgnorePatterns": [
      "node_modules",
      "src/lib"
    ],
    "preset": "ts-jest/presets/js-with-ts-esm",
    "testEnvironment": "jsdom"
  },
  "keywords": [
    "xpra"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/andersevenrud/xpra-html5-client.git"
  },
  "bugs": {
    "url": "https://github.com/andersevenrud/xpra-html5-client/issues"
  },
  "homepage": "https://github.com/andersevenrud/xpra-html5-client"
}
